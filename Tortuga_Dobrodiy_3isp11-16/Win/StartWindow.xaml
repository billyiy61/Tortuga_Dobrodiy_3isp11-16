<Window x:Class="Tortuga_Dobrodiy_3isp11_16.Win.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tortuga_Dobrodiy_3isp11_16.Win"
        mc:Ignorable="d"
        Title="StartWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Content="Клиент"
                Margin="24"
                FontSize="50"
                x:Name="ClientBtn"
                Click="ClientBtn_Click"/>

        <Button Grid.Row="1"
                Content="Сотрудник"
                Margin="24"
                FontSize="50"
                x:Name="EmployeeBtn"
                Click="EmployeeBtn_Click"/>
    </Grid>
</Window>

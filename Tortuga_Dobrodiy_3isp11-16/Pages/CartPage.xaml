                           Opacity=".5"/>

                                <TextBlock Text="{Binding Path = Cost}"
                           VerticalAlignment="Center"
                           FontSize="16"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                Grid.Column="1"
                            Margin="16 16 4 0">

                                <TextBlock Text="Количество"
                           
                           VerticalAlignment="Center"
                           FontSize="12"
                           Opacity=".5"/>

                                <TextBlock
                           VerticalAlignment="Center"
                           FontSize="16"
                                    Text="{Binding Path = Qty}"/>
                            </StackPanel>




                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Frame x:Name="CartFrame"
               Grid.RowSpan="3"/>
    </Grid>
</Page>
